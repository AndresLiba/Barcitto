@model Barcitto.Models.Cart
@{
    ViewData["Title"] = "Cart";
    var items = Model.ItemsList;
}
<h1>Cart</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => items.FirstOrDefault().CartItemProduct.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => items.FirstOrDefault().CartItemProduct.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => items.FirstOrDefault().Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CartItemProduct.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CartItemProduct.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <!--
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>-->
            </tr>
        }
    </tbody>
</table>